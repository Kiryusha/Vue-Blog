mobile()
  @media only screen and (max-width: 1100px)
    block

phone()
  @media only screen and (max-width: 486px)
    block

no-select()
  pointer-events none
  user-select none

a-reset()
  text-decoration: none
  color inherit

ul-reset()
  list-style none
  margin: 0
  padding: 0

button-reset()
  background: none
  border: 0
  padding: 0
  outline none
  cursor: pointer

card()
  background #f
  box-shadow 0 0 20px rgba(0, 0, 0, .2)
  padding 20px 20px 25px
  border-radius 3px
  color #2

  +phone()
    padding 10px 10px 15px
